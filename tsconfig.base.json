{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "es2020"],
        "moduleResolution": "nodenext",
        "noImplicitReturns": true,
        "removeComments": true,
        "sourceMap": false,
        "strict": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src"]
}
