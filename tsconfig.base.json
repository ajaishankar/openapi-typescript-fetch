{
    "compilerOptions": {
      "baseUrl": "./src",
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["dom", "dom.iterable", "ES2018"],
      "moduleResolution": "nodenext",
      "noImplicitReturns": true,
      "removeComments": true,
      "sourceMap": false,
      "strict": true,
      "target": "ES2015",
      "useDefineForClassFields": true
    },
    "include": ["src"]
  }