{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "ES2018"],
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2015",
    "useDefineForClassFields": true,
    "declarationDir": ".",
    "module": "ES2020",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["dist"]
}
