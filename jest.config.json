{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "jsdom",
  "modulePathIgnorePatterns": ["dist"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/.pnpm/(?!(json-with-bigint)@)"],
  "transform": {
    "\\.[jt]sx?$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "sourceMap": true
      }
    }
  }
}
